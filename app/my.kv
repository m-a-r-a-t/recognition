#:kivy 1.10.1

Screen:
    MDNavigationLayout:

        ScreenManager:
            id: manager
            name: "Manager"
            
            PageUploadFile:
                name: "PageUploadFile"
                id: PageUploadFileScreen

                MDBoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        
                        title: "Navigation Drawer"
                        elevation: 0
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                    
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None


                        MDRoundFlatIconButton:
                            text: "Open manager"
                            icon: "folder"
                            pos_hint: {'left': 0.3}
                        
                            on_release: app.file_manager_open()
                        
                        MDRoundFlatIconButton:
                            pos_y: "100"
                            text: "Result"
                            icon: "file"
                            pos_hint: {'left': 0.6}
                            on_release: manager.current='PageResult' 
                            on_release: app.openPageResult()
                          
                    
                    BoxLayout: 
                        orientation: 'vertical'
    
                        ScrollView:
                            MDList:
                                id: pathUploadFileList
                    
                    ScrollView: 


            PageAllFile:
                name: "PageAllFile"
                id: PageAllFileScreen

                MDBoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        
                        title: "Navigation Drawer"
                        elevation: 0
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                    
                    BoxLayout:
                        padding: "10px"
                        orientation: 'vertical'
                        size_hint_y: None

                        MDLabel: 
                            text: "Все файлы"
                            size_hint_y: None
                        

                        ScrollView:
                            MDList:
                                id: allFileInApp
                    
                    ScrollView:
            


            PageResult:
                name: "PageResult"
                id: PageResult

                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: (1, 1)

                    MDTopAppBar:
                        title: "Result"
                        elevation: 0
                        left_action_items: [["arrow-left", lambda x: app.result_page_exit_callbak()]]
                    
                       

                    BoxLayout:
                        id: boxResult
                        orientation: "vertical"
                        size_hint: 1, 1


                    ScrollView:






        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                spacing: '8dp'
                padding: '8dp'
                orientation: "vertical"
                
                MDLabel: 
                    text: "Меню"
                    size_hint_y: None

                Button:
                    text: "Загрузить файлы"
                    size_hint: 0.9, 0.05
                    on_release: manager.current='PageUploadFile'
                
                Button:
                    text: "Все файлы"
                    size_hint: 0.9, 0.05
                    on_release: manager.current='PageAllFile'
                
                Button:
                    text: "test result page"
                    size_hint: 0.9, 0.05
                    on_release: manager.current='PageResult' 
                    on_release: app.openPageResult()
                ScrollView: