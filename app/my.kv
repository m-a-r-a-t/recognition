#:kivy 1.10.1

Screen:
    MDNavigationLayout:

        ScreenManager:
            id: manager
            name: "PageManager"
            
            PageUploadFile:
                name: "PageUploadFile"
                id: PageUploadFileScreen

                MDBoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        
                        title: "Navigation Drawer"
                        elevation: 0
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                    
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None

                        MDRoundFlatIconButton:
                            multiselect: True
                            text: "Open manager"
                            icon: "folder"
                            pos_hint: {'center_x': .5, 'center_y': .6}
                            on_release: app.file_manager_open()
                    
                    BoxLayout: 
                        orientation: 'vertical'
    
                        ScrollView:
                            MDList:
                                id: pathUploadFileList
                    
                    ScrollView: 


            PageAllFile:
                name: "PageAllFile"
                id: PageAllFileScreen

                MDBoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        
                        title: "Navigation Drawer"
                        elevation: 0
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                    
                    BoxLayout:
                        padding: "10px"
                        orientation: 'vertical'
                        size_hint_y: None

                        MDLabel: 
                            text: "Меню"
                            size_hint_y: None

                        ScrollView:
                            MDList:
                                id: allFileInApp
                    
                    ScrollView:
    
            

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                spacing: '8dp'
                padding: '8dp'
                orientation: "vertical"
                
                MDLabel: 
                    text: "Меню"
                    size_hint_y: None

                Button:
                    text: "Загрузить файлы"
                    size_hint: 0.9, 0.05
                    on_release: manager.current='PageUploadFile'
                
                Button:
                    text: "Все файлы"
                    size_hint: 0.9, 0.05
                    on_release: manager.current='PageAllFile'
                    
                ScrollView: